<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_centerVertical="true"
    android:orientation="vertical"
    android:background="#000000">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical"
            android:background="@drawable/desigcarrerond"
            android:gravity="center">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="15dp"
                android:src="@drawable/icons8_male_user_96px" />

            <EditText
                android:id="@+id/regName"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:textColorHint="@color/grisclaire"
                android:hint="Nom"
                android:inputType="text" />

            <EditText
                android:id="@+id/regSurname"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:textColorHint="@color/grisclaire"
                android:layout_margin="10dp"
                android:hint="Prenom"
                android:inputType="text" />

            <EditText
                android:id="@+id/regMail"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:textColorHint="@color/grisclaire"
                android:layout_margin="10dp"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/regPassword"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:textColorHint="@color/grisclaire"
                android:layout_margin="10dp"
                android:hint="mot de passe"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/regPassword2"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:textColorHint="@color/grisclaire"
                android:layout_margin="10dp"
                android:hint="mot de passe 2"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/regBtn"
                android:layout_width="140dp"
                android:layout_height="40dp"

                android:textColor="@color/blanc"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style"
                android:text="Valider" />



            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/sortie2"
                android:layout_marginLeft="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/btn_style_red"/>
        </LinearLayout>


    </ScrollView>

</LinearLayout>